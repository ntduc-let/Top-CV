<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.info_job.fragment.InfoJobFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_title_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chung"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mức lương: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_info" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Số lượng: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_salary" />

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Giới tính: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_number" />

        <TextView
            android:id="@+id/txt_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kinh nghiệm: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_gender" />

        <TextView
            android:id="@+id/txt_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Chức vụ: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_experience" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Địa chỉ: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_position" />

        <TextView
            android:id="@+id/txt_title_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mô tả công việc"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_address" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Địa chỉ: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_description" />

        <TextView
            android:id="@+id/txt_title_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Yêu cầu ứng viên"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_description" />

        <TextView
            android:id="@+id/txt_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Địa chỉ: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_request" />

        <TextView
            android:id="@+id/txt_title_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Quyền lợi"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_request" />

        <TextView
            android:id="@+id/txt_benefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Địa chỉ: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_benefit" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>